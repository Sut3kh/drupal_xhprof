<?php

class FrontPageProfileTestCase extends PerformanceProfileTestCase {
  static function getInfo() {
    return array(
      'name' => 'Front page profile tests',
      'description' => 'Creates some content, then hits various pages.',
      'group' => 'Node',
    );
  }

  public function testFrontPage() {
    foreach (range(0, 20) as $num) {
      $this->drupalCreateNode(array('promote' => TRUE));
    }
    $content_user = $this->drupalCreateUser();
    $this->drupalLogin($content_user);
    $this->drupalProfileUrl('node', 'frontpage_logged_in');
    $this->drupalLogout();
    $this->drupalProfileUrl('node', 'frontpage_anon');
  }
}

